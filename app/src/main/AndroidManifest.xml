    package="com.simerankaur.attendyapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttendyApplication">
        <activity android:name=".ui.auth.ForgetPasswordActivity"></activity>
        <activity android:name=".ui.employee.HelpActivity" />
        <activity android:name=".ui.admin.LeaveDetailsActivity" />
        <activity android:name=".ui.admin.AttendanceDetailsActivity" />
        <activity android:name=".ui.admin.EmployeeLeaveRequestActivity" />
        <activity android:name=".ui.admin.EmployeeAttendanceActivity" />
        <activity android:name=".ui.admin.AdminDashboardActivity" />
        <activity android:name=".ui.employee.leave.CheckLeaveActivity" />
        <activity android:name=".ui.employee.leave.ApplyLeaveActivity" />
        <activity android:name=".ui.employee.leave.LeaveActivity" />
        <activity android:name=".ui.employee.profile.ProfileActivity" />
        <activity android:name=".ui.employee.ClockActivity" />
        <activity android:name=".ui.employee.QRCodeActivity" />
        <activity android:name=".ui.employee.EmployeeDashboardActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.auth.LoginActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>